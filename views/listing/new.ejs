<% layout("/layouts/boilerplate.ejs") %>

<body>
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <h1 class="mb-3">Create a new listing</h1>
                <form action="/listing" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>

                    <!-- Title Input -->
                    <div class="mb-2">
                        <label for="title" class="form-label">Title</label>
                        <input class="form-control" type="text" id="title" name="listing[title]" placeholder="Enter title" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Title required
                        </div>
                    </div>

                    <!-- Description Input -->
                    <div class="mb-2">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" name="listing[description]" class="form-control" placeholder="Enter description" required></textarea>
                        <div class="invalid-feedback">
                            Description required
                        </div>
                    </div>

                    <!-- Image Link Input -->
                    <div class="mb-2">
                        <label for="image" class="form-label">Upload image</label>
                        <input type="file" id="image" class="form-control" name="listing[image]" required>
                    </div>

                    <!-- Price and Country Inputs -->
                    <div class="row">
                        <div class="col-4 mb-2">
                            <label for="price" class="form-label">Price</label>
                            <input class="form-control" id="price" name="listing[price]" placeholder="Enter price" required>
                            <div class="invalid-feedback">
                                Price required
                            </div>
                        </div>

                        <div class="col-8 mb-2">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" id="country" class="form-control" name="listing[country]" placeholder="Enter country" required>
                            <div class="invalid-feedback">
                                Country required
                            </div>
                        </div>
                    </div>

                    <!-- Location Input -->
                    <div class="mb-2">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" class="form-control" name="listing[location]" placeholder="Enter location" required>
                        <div class="invalid-feedback">
                            Location required
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button class="btn btn-primary mt-3 mb-5" type="submit">Add</button>
                </form>
            </div>
        </div>
    </div>
</body>
