<% layout("/layouts/boilerplate.ejs") %>

<body>
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <h1>Edit Listing</h1>
                <form action="/listing/<%= docs._id %>?_method=PUT" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>

                    <!-- Title Input -->
                    <div class="mb-2">
                        <label for="title" class="form-label">Title</label>
                        <input id="title" name="listing[title]" class="form-control" type="text" value="<%= docs.title %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please write a Title.
                        </div>
                    </div>

                    <!-- Description Input -->
                    <div class="mb-2">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" name="listing[description]" class="form-control" required><%= docs.description %></textarea>
                        <div class="invalid-feedback">
                            Please write a description.
                        </div>
                    </div>

                    <!-- old listing preview -->
                  <!-- old listing preview -->
                    <div class="mb-3">
                        <span>Old Listing Image</span>
                        <br>
                        <img src="<%= originalImgUrl %>" alt="Old Listing Image">
                    </div>
                    
                    <!-- Image Link Input -->
                    <div class="mb-2">
                        <label for="image" class="form-label">Upload image</label>
                        <input id="image" type="file" name="listing[image]" class="form-control" value="<%= docs.image.url %>">
                    </div>

                    <!-- Price and Country Inputs -->
                    <div class="row">
                        <div class="col-4 mb-2">
                            <label for="price" class="form-label">Price</label>
                            <input id="price" type="number" name="listing[price]" class="form-control" value="<%= docs.price %>" required>
                            <div class="invalid-feedback">
                                Please provide a price.
                            </div>
                        </div>

                        <div class="col-md-8 mb-2">
                            <label for="country" class="form-label">Country</label>
                            <input id="country" type="text" name="listing[country]" class="form-control" value="<%= docs.country %>" required>
                            <div class="invalid-feedback">
                                Please provide a country name.
                            </div>
                        </div>
                    </div>

                    <!-- Location Input -->
                    <div class="mb-2">
                        <label for="location" class="form-label">Location</label>
                        <input id="location" type="text" name="listing[location]" class="form-control" value="<%= docs.location %>" required>
                        <div class="invalid-feedback">
                            Please provide a location.
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button class="btn btn-primary mt-3 mb-5">Edit</button>

                </form>
            </div>
        </div>
    </div>
</body>
